
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <script src="~/Scripts/jquery-2.0.3.js"></script>
    <link rel="stylesheet" href="~/Content/style.css">
    <title>Main Page</title>
</head>

<body>
    @{
        AspMVCex.Models.User user = (AspMVCex.Models.User)ViewData["user"];
    }
    <p>Welcome @user.username!</p>
    <button onclick="getFiles(@user.id)">Get files!</button>

    <div id='hiddenValue' style="display: none">@user.id</div>

    <div id="showFiles" style="display: none">
        <table class="fileTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>UserId</th>
                    <th>FileName</th>
                    <th>FilePath</th>
                    <th>Size</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>

    <button onclick="getFilesPaginated(@user.id)">Get files paginated!</button>

    <div id="showFilesPaginated" style="display: none">
        <table class="fileTablePaginated">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>UserId</th>
                    <th>FileName</th>
                    <th>FilePath</th>
                    <th>Size</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <button id="previousButton" onclick="prev(@user.id)">Previous</button>
        <button id="nextButton" onclick="next(@user.id)">Next</button>

    </div>

    <button onclick="getFilesPaginatedServer(@user.id)">Get files paginated server!</button>

    <div id="showFilesPaginatedServer" style="display: none">
        <table class="fileTablePaginatedServer">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>UserId</th>
                    <th>FileName</th>
                    <th>FilePath</th>
                    <th>Size</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <button id="previousButton2" onclick="prev2(@user.id)">Previous</button>
        <button id="nextButton2" onclick="next2(@user.id)">Next</button>

    </div>

    <button onclick="findMostPopularFile(@user.id)">Find most popular file(s)!</button>
    <div id="mostPopularFiles"></div>
    <script src="~/Scripts/script.js" type="text/javascript"></script>
</body>

</html>